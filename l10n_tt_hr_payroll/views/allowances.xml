<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract View -->
    <record id="salary_additions_form" model="ir.ui.view">
        <field name="name">Income Additions Form View</field>
        <field name="model">salary.additions</field>
        <field name="arch" type="xml">   
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="type" widget="many2one"/>
                        <field name="contract_id"/>
                        <field name="year_valid_from"/>
                        <field name="year_valid_to"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 
    <record id="salary_additions_type_form" model="ir.ui.view">
        <field name="name">Income Additions Type Form View</field>
        <field name="model">salary.additions.type</field>
        <field name="arch" type="xml">   
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="currency_id"/>
                        <field name="rule_parameter_ids" domain="[(1,'=',1)]"/> 
                    </group>
                </sheet>
            </form>
        </field>
    </record> 
</odoo>