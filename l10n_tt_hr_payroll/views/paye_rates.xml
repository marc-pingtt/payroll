<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="paye_rates_view_tree" model="ir.ui.view">
        <field name="name">paye.rates.tree</field>
        <field name="model">paye.rates</field>
        <field name="arch" type="xml">
            <tree string="Channel" >
                <field name="paye_personal_deduction"/>
                <field name="paye_senior_citizen_deduction"/>
                <field name="paye_mortgage_limit"/>
                <field name="paye_tertiary_education_limit"/>
                <field name="paye_senior_citizen_age"/>
                <field name="paye_alimony_limit"/>
                <field name="paye_other_annuities_limit"/>
            </tree>
        </field>
    </record>
    <record id="view_paye_rates_form" model="ir.ui.view">
        <field name="name">paye.rates.form</field>
        <field name="model">paye.rates</field>
        <field name="arch" type="xml">
            <form string="Paye Rates">
                <sheet>
                    <group>
                        <group>
                            <field name="paye_personal_deduction"/>
                            <field name="paye_senior_citizen_deduction"/>
                            <field name="paye_mortgage_limit"/>
                            <field name="paye_tertiary_education_limit"/>
                        </group>
                        <group>
                            <field name="paye_senior_citizen_age"/>
                            <field name="paye_alimony_limit"/>
                            <field name="paye_other_annuities_limit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>